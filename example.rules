ALERT InstanceDown
  IF up == 0
  FOR 5m
  LABELS { severity = "page" }
  ANNOTATIONS {
    summary = "Instance {{$labels.instance}} down",
    description = "{{$labels.instance}} of job {{$labels.job}} has been down for more than 5 minutes.",
  }

ALERT HighSystemVolumeUsage
  IF ((wmi_logical_disk_size_bytes{volume="C:"} - wmi_logical_disk_free_bytes{volume="C:"}) / wmi_logical_disk_size_bytes{volume="C:"} * 100) > 75
  FOR 5m
  LABELS { severity = "page" }
  ANNOTATIONS {
    SUMMARY = "Instance {{$labels.instance}} with high disk usage on the system volume",
    DESCRIPTION = "{{$labels.instance}} of job {{$labels.job}} has high disk usage (above 75% (current value is {{$value}})) on the system volume for more than 5 minutes."
  }

ALERT ProbeFailing
  IF probe_success == 0
  FOR 5m
  ANNOTATIONS {
    SUMMARY = "Instance {{$labels.instance}} probe is failing",
    DESCRIPTION = "{{$labels.instance}} of job {{$labels.job}} is failing for more than 5 minutes."
  }
